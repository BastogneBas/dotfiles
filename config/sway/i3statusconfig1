# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
		output_format = "i3bar"
        colors = true
        interval = 1
}

#order += "ipv6"
#order += "disk /"
#order += "disk /boot"
#order += "disk /home/bas/Downloads"
#order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"
order += "cpu_temperature 0"
order += "cpu_temperature 1"
order += "cpu_temperature 2"
order += "cpu_temperature 3"
#order += "load"
#order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage (%remaining, %consumption)"
        format_down = "No Battery"
        low_threshold = 10
		last_full_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

cpu_temperature 0 {
		format = "C0: %degrees°C"
		max_threshold = "70"
		path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp2_input"
}

cpu_temperature 1 {
		format = "C1: %degrees°C"
		max_threshold = "70"
		path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp3_input"
}

cpu_temperature 2 {
		format = "C2: %degrees°C"
		max_threshold = "70"
		path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp4_input"
}

cpu_temperature 3 {
		format = "C3: %degrees°C"
		max_threshold = "70"
		path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp5_input"
}

disk "/" {
        format = "/: %free (%percentage_free) of %total"
		low_threshold = 5
}

disk "/boot" {
        format = "/boot: %free (%percentage_free) of %total"
		low_threshold = 5
}

disk "/home/bas/Downloads" {
        format = "Downloads: %free (%percentage_free) of %total"
		low_threshold = 5
}


