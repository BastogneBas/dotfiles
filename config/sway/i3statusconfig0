# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
		output_format = "i3bar"
        colors = true
        interval = 1
}

#order += "ipv6"
order += "tztime local"
order += "volume master"
order += "disk /"
order += "disk /boot"
order += "disk /home/bas/Downloads"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
#order += "cpu_temperature 0"
order += "load"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage (%remaining, %consumption)"
        format_down = "No Battery"
        low_threshold = 10
		last_full_capacity = true
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
		min_width = 300
}

load {
        format = "%1min"
}

cpu_temperature 0 {
		format = "T: %degrees°C"
		max_threshold = "85"
		path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp2_input"
}

disk "/" {
        format = "/: %used (%percentage_used) of %total"
		low_threshold = 5
}

disk "/boot" {
        format = "/boot: %used (%percentage_used) of %total"
		low_threshold = 5
}

disk "/home/bas/Downloads" {
        format = "Downloads: %used (%percentage_used) of %total"
		low_threshold = 5
}

volume master {
		format = "♪: %volume"
		format_muted = "♪: muted (%volume)"
		device = "pulse"
}
